{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2020"],
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./lib",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts", "index.ts"]
}
